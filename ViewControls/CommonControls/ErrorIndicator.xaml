<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:JOIN.Helpers"
             x:Class="JOIN.ViewControls.CommonControls.ErrorIndicator"
                     IsVisible="false"
                     Padding="48,12">

    <Image
        x:Name="imgError"
        Source="{Binding ErrorImage, Mode=OneWay}"
        HorizontalOptions="Center"
        WidthRequest="64"
        HeightRequest="64"
        Aspect="AspectFit"/>

    <Label
        Margin="0,12,0,0"
        Text="Ops!"
        Style="{StaticResource MediumDarkText18}"
        HorizontalOptions="Center"
        HorizontalTextAlignment="Center"/>

    <Label
        x:Name="lblErrorText"
        Style="{StaticResource MediumDarkText14}"
        LineBreakMode="WordWrap"
        HorizontalOptions="Center"
        HorizontalTextAlignment="Center"/>
</VerticalStackLayout>
