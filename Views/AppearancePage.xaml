<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:JOIN.ViewModels"
             x:DataType="viewmodels:AppearanceViewModel"
             x:Class="JOIN.Views.AppearancePage">

    <!-- StackLayout per allineare i controlli della pagina in modo verticale -->
    <StackLayout VerticalOptions="CenterAndExpand">

        <!-- Label per mostrare il testo "Modalità di visualizzazione" -->
        <Label Text="Modalità di visualizzazione"
               HorizontalOptions="Center" />

        <!-- Switch per attivare o disattivare la modalità scura -->
        <Switch x:Name="DarkModeSwitch"
                Toggled="OnDarkModeSwitchToggled"/>

    </StackLayout>
</ContentPage>
