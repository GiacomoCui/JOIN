<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JOIN.Views.ProfiloUtente.PaginaProfiloModificabile"
             Title="PaginaProfiloModificabile">

    <StackLayout>
        
        <Label Text="{Binding User.Nome}"/>
        <Entry />

        <Label Text="Modifica la tua Biografia"/>
        <Entry />

        <Button Text="Salva"
                FontSize="20"
                Command="{Binding Salva}"/>

    </StackLayout>

</ContentPage>